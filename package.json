{
  "name": "rescript-polished",
  "version": "0.0.0-semantic-versioned",
  "description": "ReScript bindings for polished.",
  "main": "dist/index.js",
  "repository": "https://github.com/brnrdog/rescript-polished",
  "author": "Bernardo Gurgel <brnrdog@hey.com>",
  "license": "MIT",
  "keywords": [
    "rescript",
    "polished",
    "color",
    "css-in-js",
    "color manipulate",
    "color manipulation",
    "colour",
    "styled-components"
  ],
  "scripts": {
    "res:start": "bsb -make-world -w",
    "res:build": "bsb -make-world",
    "res:clean": "bsb -clean-world",
    "test": "jest",
    "test:ci": "jest --collect-coverage"
  },
  "dependencies": {
    "bs-css": "^13.4.0",
    "bs-platform": "^9.0.1",
    "polished": "^4.0.3"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.7.0",
    "jest": "^26.6.3",
    "semantic-release": "^17.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/lib/js/src/**/*.js",
      "!<rootDir>/lib/js/src/Polished.js",
      "!<rootDir>/lib/js/src/PolishedCss.js"
    ],
    "verbose": true
  }
}
